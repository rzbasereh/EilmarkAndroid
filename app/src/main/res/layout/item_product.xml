<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/min_margin"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/artisho"
            />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:fontFamily="@font/vazir_medium"
            android:textSize="@dimen/H5"
            android:text="@string/title_wish"/>

        <TextView
            android:id="@+id/product_subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:fontFamily="@font/vazir_medium"
            android:textSize="@dimen/H6"
            android:textColor="@color/colorSecondry"
            android:text="@string/title_explore"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginBottom="5dp"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vazir_medium"
                android:textSize="@dimen/H5"
                android:textColor="@color/colorPrimary"
                android:text="12000 تومان" />

            <ImageButton
                android:id="@+id/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="@drawable/btn_icon_primary"
                android:src="@drawable/ic_dashboard_black_24dp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>